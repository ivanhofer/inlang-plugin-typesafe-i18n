{
  "name": "inlang-plugin-typesafe-i18n",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n build,test -c auto \"npm run dev:plugin\" \"npm run tsc:watch\"",
    "dev:plugin": "DEV=true tsx ./esbuild.ts",
    "build": "tsx ./esbuild.ts && tsc -p tsconfig.build.json",
    "test": "npm run tsc && npm run vitest",
    "vitest": "vitest run",
    "vitest:watch": "vitest",
    "tsc": "tsc --noEmit",
    "tsc:watch": "tsc --watch --noEmit",
    "prepare": "husky install",
    "typesafe-i18n": "typesafe-i18n"
  },
  "devDependencies": {
    "@inlang/messages": "../inlang/source-code/core/messages",
    "@inlang/module": "../inlang/source-code/core/module",
    "@inlang/plugin": "../inlang/source-code/core/plugin",
    "concurrently": "^8.2.0",
    "dedent": "^1.5.1",
    "esbuild": "^0.18.17",
    "husky": "^8.0.3",
    "just-safe-set": "^4.2.1",
    "memfs": "^4.2.0",
    "tsx": "^3.12.7",
    "typesafe-i18n": "^5.25.1",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "volta": {
    "node": "18.13.0"
  }
}
