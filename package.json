{
  "name": "inlang-plugin-typesafe-i18n",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n build,test -c auto \"npm run dev:plugin\" \"npm run tsc:watch\"",
    "dev:plugin": "pnpm build --watch",
    "build": "inlang module build --entry ./src/index.ts --outdir ./dist",
    "test": "npm run tsc && npm run vitest",
    "vitest": "vitest run",
    "vitest:watch": "vitest",
    "tsc": "tsc --noEmit",
    "tsc:watch": "tsc --watch --noEmit",
    "prepare": "husky install",
    "typesafe-i18n": "typesafe-i18n"
  },
  "devDependencies": {
    "@inlang/cli": "../inlang/source-code/cli",
    "@inlang/module": "../inlang/source-code/core/module",
    "@inlang/plugin": "../inlang/source-code/core/plugin",
    "concurrently": "^8.2.1",
    "dedent": "^1.5.1",
    "husky": "^8.0.3",
    "just-safe-set": "^4.2.1",
    "memfs": "^4.2.1",
    "typesafe-i18n": "^5.26.1",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2"
  },
  "volta": {
    "node": "18.13.0"
  }
}
